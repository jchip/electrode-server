{
  "name": "electrode-server",
  "version": "2.3.1",
  "description": "A configurable Hapi web server",
  "main": "lib/electrode-server.js",
  "scripts": {
    "prepublishOnly": "clap -n build docs",
    "test": "clap test",
    "coverage": "clap check",
    "sample": "node test/sample/index.js",
    "build": "tsc",
    "docs": "typedoc --excludeNotExported --out docs src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/electrode-io/electrode-server.git"
  },
  "keywords": [
    "electrode",
    "hapi",
    "node",
    "webserver"
  ],
  "contributors": [
    {
      "name": "Joel Chen",
      "email": "xchen@walmartlabs.com"
    },
